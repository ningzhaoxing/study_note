{
  "name": "git",
  "description": "Git 版本控制工具集",
  "version": "1.0.0",
  "author": "Claudian",
  "license": "MIT",
  "commands": {
    "commit": {
      "description": "提交本地更改到 git 仓库",
      "script": "git-commit.skill.sh",
      "usage": "commit [选项] [提交信息]",
      "options": [
        {
          "name": "help",
          "short": "h",
          "long": "help",
          "description": "显示帮助信息"
        },
        {
          "name": "status",
          "short": "s",
          "long": "status",
          "description": "显示当前 git 状态"
        },
        {
          "name": "message",
          "short": "m",
          "long": "message",
          "description": "指定提交信息",
          "argument": "MESSAGE"
        },
        {
          "name": "all",
          "short": "a",
          "long": "all",
          "description": "添加所有更改的文件"
        },
        {
          "name": "push",
          "short": "p",
          "long": "push",
          "description": "提交后推送到远程"
        }
      ],
      "examples": [
        "commit -a -m \"更新文档\" -p",
        "commit -s",
        "commit --help"
      ]
    }
  },
  "category": "git",
  "tags": ["git", "version-control", "vcs"]
}